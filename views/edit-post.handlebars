<article class='d-flex flex-column align-items-center'>
  <div class='col-10'>
    <div class='mb-3'>
      <h3 class='fw-bold fs-2 font-monospace'>Edit post</h3>
    </div>
    <form class='edit-post-form mb-3'>
      <div class='mb-3 bg-dark rounded p-3'>
        <label for='edit-title' class='form-label text-light fs-4'>Title</label>
        <input
          type='text'
          class='form-control'
          name='edit-title'
          id='edit-title'
          value='{{post.title}}'
        />
      </div>
      <div class='mb-3 bg-dark rounded p-3'>
        <label for='edit-content' class='form-label text-light fs-4'>Content</label>
        <textarea
          name='edit-content'
          id='edit-content'
          class='form-control'
          style='height: 300px'
        >{{post.content}}</textarea>
      </div>
    </form>
    <div class='btn-group mb-5' role='group'>
      <button
        type='submit'
        class='save-post-btn btn btn-success text-dark fs-4 p-3'
      ><i class='fa-solid fa-floppy-disk'></i></button>
      <button
        type='button'
        class='delete-post-btn btn btn-danger text-dark fs-4 p-3'
      ><i class='fa-solid fa-trash-can'></i></button>
    </div>
  </div>
</article>
<div class="d-flex justify-content-center border-top border-success">
  <div class='col-10 d-flex row justify-content-around mt-5'>
    <form class='comment-form col-3'>
      <div class='mb-3 me-2'>
        <textarea
          name='comment-body form-control'
          style='height: 100px'
          id='comment-body'
          class="col-4 w-100"
          placeholder="Add a comment"
        ></textarea>
      </div>
      <div>
        <button type='submit' class='btn btn-success font-monospace'>Add comment</button>
      </div>
    </form>
    <div class="col-7">
    {{> comments post.comments}}
    </div>
  </div>
</div>

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>