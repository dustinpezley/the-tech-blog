<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Tech Blog</title>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css'
      integrity='sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class='bg-dark'>
    <div class='wrapper container-fluid overflow-hidden bg-dark'>
      <header class='row bg-dark mb-5 pb-5 pt-5 d-flex align-items-center'>
        <nav class='col-9 font-monospace fs-5 ps-5'>
          <ul class='nav mb-2'>
            <li class='nav-item'>
              <a href='/' class='nav-link active text-decoration-none'>Home</a>
            </li>
            {{#if loggedIn}}
              <li class='nav-item'>
                <a
                  href='/dashboard'
                  class='nav-link text-decoration-none'
                >Dashboard</a>
              </li>
              <li class='nav-item d-flex align-items-center'>
                <button
                  id='logout'
                  class='btn-no-style text-nowrap text-decoration-none ms-1 nav-link'
                >Logout</button>
              </li>
            {{else}}
              <li class='nav-item'>
                <a href='/login' class='nav-link text-decoration-none'>Login</a>
              </li>
            {{/if}}
          </ul>
        </nav>
        <div
          class='col-3 text-nowrap fs-1 justify-content-center pe-5 fw-bold logo'
        >
          <a
            href='/'
            class='text-decoration-none p-1 text-dark rounded w-100 text-center p-2 font-monospace'
          >The Tech Blog</a>
        </div>
      </header>
      <main class='col-12'>
        {{{body}}}
      </main>
    </div>

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>
</html>