<div class='d-flex flex-column align-items-center'>
  <form
    class='login-form row justify-content-around d-flex border rounded col-10 mb-5 align-items-center'
  >
    <div class='col-2 text-center align-items-center'>
      <h class="fs-1 fw-bold text-nowrap">Sign In</h3>
    </div>
    <div class='col-9 align-items-center mb-3 mt-3'>
      <div class='form-floating mb-3'>
        <input
          type='email'
          class='form-control'
          id='email-login'
        />
        <label for='email-login'>Email address</label>
      </div>
      <div class='form-floating'>
        <input
          type='password'
          class='form-control'
          id='password-login'
        />
        <label for='password-login'>Password</label>
      </div>
      <button type='submit' class='btn btn-success mt-2'>Sign In</button>
    </div>
  </form>

  <form
    class='signup-form row justify-content-around d-flex border rounded col-10 mb-5 align-items-center'
  >
    <div class='col-9 align-items-center mb-3 mt-3'>
      <div class='form-floating mb-3'>
        <input
          type='text'
          class='form-control'
          id='username-signup'
        />
        <label for='username-signup'>Username</label>
      </div>
      <div class='form-floating mb-3'>
        <input
          type='email'
          class='form-control'
          id='email-signup'
        />
        <label for='email-signup'>Email address</label>
      </div>
      <div class='form-floating mb-3'>
        <input
          type='password'
          class='form-control'
          id='password-signup'
        />
        <label for='password-signup'>Password</label>
      </div>
      <button type='submit' class='btn btn-success'>Sign Up</button>
    </div>
    <div class='col-2 text-center align-items-center'>
      <h3 class="fs-1 fw-bold text-nowrap">Sign Up</h3>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>