<li class='card border-dark mb-5 col-10'>
  <a href='/post/{{id}}' class='text-decoration-none'>
    <div
      class='card-header bg-dark text-light m-0 d-flex w-100 align-items-center justify-content-between'
    >
      <h1 class='fs-5 m-0'>{{title}}</h1>
      <p class='fs-7 lh-1 m-0'>Posted by
        {{user.username}}
        on
        {{format_date created_at}}</p>
    </div>
    <div class='card-body-bg-light text-dark mt-3'>
      <p class='fs-8 ms-3 lh-1'>{{content}}</p>
    </div>
  </a>
</li>